{
  "name": "perpetual-sprint",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deps:graph": "npx depcruise --exclude '__tests__' --exclude '^node_modules' --output-type dot src | dot -T svg > reports/dependency-graph.svg && npx depcruise --exclude '__tests__' --exclude '^node_modules' --output-type mermaid src > reports/dependency-graph.mmd",
    "deps:graph-tests": "npx depcruise --exclude '^node_modules' --output-type dot __tests__ | dot -T svg > reports/dependency-graph-tests.svg && npx depcruise --exclude '^node_modules' --output-type mermaid __tests__  > reports/dependency-graph.mmd",
    "dev": "next dev --turbo",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:deps": "npx depcruise --exclude '^node_modules' src",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.10",
    "@radix-ui/react-slot": "^1.1.2",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "drizzle-orm": "^0.40.0",
    "esbuild": "^0.25.1",
    "lucide-react": "^0.479.0",
    "mermaid": "^11.5.0",
    "next": "^15.0.1",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "use-interval": "^1.4.0",
    "usehooks-ts": "^3.1.1",
    "uuid": "^11.1.0",
    "zod": "^3.23.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.12",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-istanbul": "^3.0.9",
    "daisyui": "^5.0.3",
    "dependency-cruiser": "^16.10.0",
    "drizzle-kit": "^0.30.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "fake-indexeddb": "^6.0.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.39",
    "prettier": "3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  },
  "ct3aMetadata": {
    "initVersion": "7.38.1"
  },
  "overrides": {
    "esbuild": "^0.25.1"
  },
  "packageManager": "npm@10.9.2"
}
